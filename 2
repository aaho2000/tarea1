import java.lang.Math;

public class a {

    
    public static double calcularArea(String figura, double... parametros) {
        switch (figura.toLowerCase()) {
            case "circulo":
                double radio = parametros[0];
                return Math.PI * radio * radio;
            case "cuadrado":
                double lado = parametros[0];
                return lado * lado;
            case "triangulo":
                double base = parametros[0];
                double altura = parametros[1];
                return 0.5 * base * altura;
            default:
                throw new IllegalArgumentException("Figura no reconocida");
        }
    }

   
    public static void burbuja //bubbleSort//(double[] arr) {
        int n = arr.length;
        for (int i = 0; i < n - 1; i++) {
            for (int j = 0; j < n - i - 1; j++) {
                // Compare adjacent elements and swap them if they're in the wrong order
                if (arr[j] > arr[j + 1]) {
                    double temp = arr[j];
                    arr[j] = arr[j + 1];
                    arr[j + 1] = temp;
                }
            }
        }
    }

    public static void main(String[] args) {
        
        double[] areas = {
            calcularArea("circulo", 5.0),
            calcularArea("cuadrado", 4.0),
            calcularArea("triangulo", 6.0, 3.0),
            calcularArea("circulo", 2.0),
            calcularArea("cuadrado", 7.0)
        };

        System.out.println("Areas sin ordenar:");
        for (double area : areas) {
            System.out.println(area);
        }

        // Apply the sorting algorithm
        bubbleSort(areas);

        System.out.println("\nAreas ordenadas (de menor a mayor):");
        for (double area : areas) {
            System.out.println(area);
        }
    }
}

// con el for que es el metodo burbuja en este caso compara para ordenar los valores
